@model First.Models.ViewModels.ExpenseVM

<div class="container p-3">
    <div class="row pt-4">
        <div class="col col-6">
            <h2 class="text-primary">Create new</h2>
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            <p class="text-muted">Make sure to fill all fields</p>
            <div asp-validation-summary="ModelOnly" class="text-danger h6"></div>
        </div>
        <form method="post" asp-action="Create">

            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Expense.Description"></label>
                    <input type="text" asp-for="Expense.Description" class="form-control" />
                    <span asp-validation-for="Expense.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Expense.Amount"></label>
                    <input type="text" asp-for="Expense.Amount" class="form-control" min="1" step="0.01" />
                    <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Expense.ExpenseCategoryId"></label>

                    <select asp-for="Expense.ExpenseCategoryId" asp-items="Model.CategoryDropDown" class="form-control">
                        <option>Select...</option>
                    </select>

                    <span class="text-danger" asp-validation-for="Expense.ExpenseCategoryId"></span>
                </div>
            
            </div>
            <div class="card-footer">
                <div class="text-right">
                    <a asp-action="Index" class="btn btn-dark">Go Back</a>
                    <button type="reset" class="btn btn-warning">Reset</button>
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{

@{ <partial name = "_validationScriptsPartial" /> }

 }