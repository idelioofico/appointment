@model First.Models.Expense

<div class="container p-3">
    <div class="row pt-4">
        <div class="col col-6">
            <h2 class="text-primary">Update Expense</h2>
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            <p class="text-muted">Make sure to fill all fields</p>
        </div>
        <form method="post" asp-action="Update">
            <input type="hidden" asp-for="Id" />
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input type="text" asp-for="Description" class="form-control"/>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount"></label>
                    <input type="text" asp-for="Amount" class="form-control" min="1" step="0.01"  />
                    <span class="text-danger" asp-validation-for="Amount"></span>
                </div>

            </div>
            <div class="card-footer">
                <div class="text-right">
                    <a asp-action="Index" class="btn btn-dark">Cancel</a>
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>