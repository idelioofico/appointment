@model First.Models.ViewModels.ExpenseVM

<div class="container p-3">
    <div class="row pt-4">
        <div class="col col-6">
            <h2 class="text-danger">Delete Expense</h2>
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            <p class="text-muted">Are you sure abou delete this registry?</p>
        </div>
        <form method="post" asp-action="DeleteAction" asp-route-Id="@Model.Expense.Id">

            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Expense.Description"></label>
                    <input type="text" asp-for="Expense.Description" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Expense.Amount"></label>
                    <input type="text" asp-for="Expense.Amount" class="form-control" min="1" step="0.01" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Expense.ExpenseCategoryId"></label>
                    <select class="form-control" asp-for="Expense.ExpenseCategoryId" asp-items="Model.CategoryDropDown" readonly>
                        <option>Select</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Expense.ExpenseCategoryId"></span>
                </div>

            </div>
            <div class="card-footer">
                <div class="text-right">
                    <a asp-action="Index" class="btn btn-dark">No, Cancel</a>
                    <!--<button type="reset" class="btn btn-warning">Reset</button>-->
                    <button type="submit" class="btn btn-danger" >Yes, Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>