@model IEnumerable<First.Models.ExpenseCategory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col col-6  ">
            <h2 class="text-primary">Expense Categories List</h2>
        </div>
        <div class="col col-6 text-right">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-info">Create new</a>
        </div>
    </div>
    <br />
    <div class="table-responsive">
        <table class="table  table-hover table-bordered" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var expenseCategory in Model)
                    {
                        <tr>
                            <td width="7%">@expenseCategory.Id</td>
                            <td>@expenseCategory.Description</td>
                            <td width="10%">
                                <div class="btn-group">
                                    <a asp-action="Update" asp-route-Id="@expenseCategory.Id" class="btn btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-Id="@expenseCategory.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {

                    <tr>
                        <td class="alert alert-info text-center" colspan="5">
                            No data created yet!
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>